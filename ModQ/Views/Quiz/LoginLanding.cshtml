                </table>
            </div>
        </div>
    </div>
</div>

<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
   
    @Html.Partial("_QuizPartial")    
    
    <div class="row">
        @using (Html.BeginForm("PreviousQuestion", "Quiz", FormMethod.Post))
        {
            <input type="hidden" name="HiddenIndex" id="HiddenIndex" value="@Model.HiddenIndex" />
            <input type="hidden" name="Faculty" id="Faculty" value="@Model.Faculty"/>
            <input type="hidden" name="Question" id="Question" value="@Model.Question"/>
            <div class="col-md-2">
                <input type="submit" class="btn btn-primary" value="Prev">
            </div>
        }
        @using (Html.BeginForm("NextQuestion", "Quiz", FormMethod.Post))
        {
            <input type="hidden" name="HiddenIndex" id="HiddenIndex" value="@Model.HiddenIndex" />
            <input type="hidden" name="Faculty" id="Faculty" value="@Model.Faculty"/>
            <input type="hidden" name="Question" id="Question" value="@Model.Question"/>
            <div class=" pull-right ">
                <input type="submit" class="btn btn-primary" value="Next" >
            </div>
        }
    </div>
    <br/>
    <div class="row">
        <div class="col-md-12">
           
                    <h4 class="panel-title" id="answerDescription">
                      
                    </h4>
        </div>
    </div>
        
</div>

