@using System.Activities.Expressions
@model ModQ.Models.QuizViewModel
@{
    ViewBag.Title = "LoginLanding";
}
@section styles
{
    @Styles.Render("~/Content/customCss/loginLanding.css")
}
@section Scripts{
    @Scripts.Render("~/Content/customJS/quizChoice.js")
}
<div class="col-sm-3 col-md-2 sidebar">
   
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title">
                <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
                    <span class="glyphicon glyphicon-folder-close">
                    </span>Quiz by Faculty
                </a>
            </h4>
        </div>
          
            <div id="collapseOne" class="panel-collapse collapse in">
                <div class="panel-body">
                    <table class="table">
                        <tr>
                            <td>
                                <span class="glyphicon glyphicon-pencil text-primary"></span>@Html.ActionLink("Engineering", "QuizByFaculty", "Quiz", new { quizByFaculty = "Engineering", hiddenIndex = @Model.HiddenIndex }, null)
                                <span class="badge">@Model.NumberOfQuestionsByFaculty["Engineering"]</span>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <span class="glyphicon glyphicon-flash text-success"></span>@Html.ActionLink("Computing", "QuizByFaculty", "Quiz", new { quizByFaculty = "Computing", hiddenIndex = @Model.HiddenIndex }, null)
                                <span class="badge">@Model.NumberOfQuestionsByFaculty["Computing"]</span>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <span class="glyphicon glyphicon-file text-info"></span>@Html.ActionLink("Science", "QuizByFaculty", "Quiz", new { quizByFaculty = "Science", hiddenIndex = @Model.HiddenIndex }, null)
                                <span class="badge">@Model.NumberOfQuestionsByFaculty["Science"]</span>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <span class="glyphicon glyphicon-comment text-success"></span>@Html.ActionLink("Business", "QuizByFaculty", "Quiz", new { quizByFaculty = "Business", hiddenIndex = @Model.HiddenIndex }, null)
                                <span class="badge">@Model.NumberOfQuestionsByFaculty["Business"]</span>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
     
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title">
                <a data-toggle="collapse" data-parent="#accordion" href="#collapseTwo">
