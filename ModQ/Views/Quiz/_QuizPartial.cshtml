                                    @Html.RadioButtonFor(model => model.AnswerGroup, Model.OptionThree) @Html.LabelFor(model => model.ThirdOption) 
                                    <span id="optionThreePanel">@Html.DisplayFor(model => model.ThirdOption)</span>
                                </h4>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="panel panel-default options">
