                                <h4 class="panel-title">
                                    @Html.RadioButtonFor(model => model.AnswerGroup, Model.OptionTwo)  @Html.LabelFor(model => model.SecondOption) 
                                    <span id="optionTwoPanel">@Html.DisplayFor(model => model.SecondOption)</span>
                                </h4>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="panel panel-default options">
                            <div class="panel-heading">
